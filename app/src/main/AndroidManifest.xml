<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:name=".HeroesApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.SuperHeroes"
        tools:targetApi="31">
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyA8UnlujnV8hr7YHE3OtGl-Ksa1wYI_IRQ" />
        <activity
            android:name=".ui.ListHeroesActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.EditHeroesActivity"
            android:parentActivityName=".ui.ListHeroesActivity"
            android:exported="true">
        </activity>
        <activity
            android:name=".ui.ListLicenseActivity"
            android:parentActivityName=".ui.ListHeroesActivity"
            android:exported="true">
        </activity>
        <activity
            android:name=".ui.DetailHeroesActivity"
            android:parentActivityName=".ui.ListHeroesActivity"
            android:exported="true">
        </activity>
        <activity
            android:name="com.superheroes.app.ui.MapHeroesFragment"
            android:parentActivityName=".ui.ListHeroesActivity"
            android:exported="true">
        </activity>
        <activity
            android:name="com.superheroes.app.ui.SettingsActivity"
            android:parentActivityName=".ui.ListHeroesActivity"
            android:exported="true"/>
    </application>

</manifest>